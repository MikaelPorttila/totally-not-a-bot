{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Deno",
        "request": "launch",
        "type": "node",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "deno",
        "program": "./src/mod.ts",
        "runtimeArgs": [
          "run",
          "--inspect-brk",
          "--allow-all"
        ],
        "outputCapture": "std",
        "attachSimplePort": 9229
      }
    ]
  }